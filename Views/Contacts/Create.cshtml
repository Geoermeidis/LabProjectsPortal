@model List<string>

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Contacts" asp-action="Create">

            <div class="form-group">
                <label for="movie">Email:</label>
                <select class="form-control" id="Email" name="Email" required>
                    @foreach (var m in Model)
                    {
                        <option value="@m">@m</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Send Request</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
