@{
    ViewData["Title"] = "Create";
}
@model List<string>

<link rel="stylesheet" href="~/css/posts_create_main.css">

<h1>Create a new post</h1>

<div>
    <a class="btn btn-info" asp-action="Index">Back to Posts</a>
</div>

<form method="post" asp-controller="Posts" asp-action="Create">
    <h3 class="text-center">New post</h3>
    <div class="icon">
        <img src="/resources/images/post_icon.png" />
    </div>
    <div class="formcontainer">
        <div class="container">
            <div>
                <label for="date">Content:</label>
                <input type="text" id="Content" name="Content" required />
            </div>
            <div>
                <label for="movie">Category:</label>
                <select class="form-control" id="CategoryTitle" name="CategoryTitle" required>
                    @foreach (var m in Model)
                    {
                        <option value="@m">@m</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div style="justify-content:center">

        <button class="custombutton" type="submit"><strong>Create</strong></button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
