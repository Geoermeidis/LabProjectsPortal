@model LabProjectsPortal.Dto.PostsCategoriesDto

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<select id="categoryDropdown" class="form-control">
    <option value="">Select a Category</option>
    @foreach (var category in Model.Categories)
    {
        <option value="@category">@category</option>
    }
</select>

<table class="table">
    <thead>
        <tr>
            <th>
                Content
            </th>
            <th>
                UploadedAt
            </th>
            <th>
                Publisher
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Posts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedAt)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    document.getElementById("categoryDropdown").addEventListener("change", function () {
        var selectedCategory = this.value;
        if (selectedCategory) {
            window.location.href = "/Posts/Index?category=" + encodeURIComponent(selectedCategory);
        }
    });
</script>
